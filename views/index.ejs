<% include partials/header %>

	<div class="container">
		<h1>Tickle This Donut</h1>
		<video id="vidd" width="360">
			<source src="assets/lost.mp4" type="video/mp4">
		</video>
		
		<br>

		<button class="btn" onclick="playVid()"><i id="vidStat" class="fa fa-play"></i></button>
		<button class="btn" onclick="changeSpeed(.1)"><i class="fa fa-plus"></i></button>
		<button class="btn" onclick="changeSpeed(-.1)"><i class="fa fa-minus"></i></button>
		<button class="btn" onclick="flipVid()">Mirror</button>
		Volume:
		<input id="vol" type="number" name="volume" min="0" max="1" step=".1" value="1" onchange="volChange()">

		Width:
		<select id="res" onchange="changeWidth()">
			<option value="360" selected>360</option>
			<option value="720">720</option>
			<option value="1080">1080</option>
		</select>

		<p>Speed: <span id="speed"></span></p>
		<p>Time: <span id="currTime">00:00</span> / <span id="totalTime"></span></p>
	</div>



	<div class="container">
		<hr>

		<button onclick="section()">Chorus</button>
		Start: <input id="startSection" type="text" name="startTime" value="0:00">
		End: <input id="endSection" type="text" name="endTime" value="0:00">
	</div>

	<script src="js/index.js" type="text/javascript"></script>
	
<% include partials/footer %>