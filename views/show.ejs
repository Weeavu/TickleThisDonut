<% include ./partials/header %>

	<link rel="stylesheet" href="../css/index.css">
	<div class="container">
		<h1>Tickle This Donut</h1>
		<video id="vidd" width="360" playsinline>
			<source src="../assets/videos/<%= name %>" type="video/mp4">
		</video>
		
		<br>

		<button class="btn" onclick="playVid()"><i id="vidStat" class="fa fa-play"></i></button>
		<button class="btn" onclick="changeSpeed(.1)"><i class="fa fa-plus"></i></button>
		<button class="btn" onclick="changeSpeed(-.1)"><i class="fa fa-minus"></i></button>
		<button id="mirrorBtn" class="btn" onclick="flipVid()">Mirror</button>

		Width:
		<select id="res" onchange="changeWidth()">
			<option value="360" selected>360</option>
			<option value="720">720</option>
			<option value="1080">1080</option>
		</select>
		
		<i class="fa fa-volume-up" aria-hidden="true"></i>
		<input id="vol" type="number" name="volume" min="0" max="100" step="1" value="100" onchange="volChange(this.value/100)">
		
		<p>Speed: <span id="speed"></span></p>
		<p>Time: <span id="currTime">00:00</span> / <span id="totalTime"></span></p>
	</div>
	
	<div class="container">
		
		<hr>

		<button id="loopBtn" class="btn" onclick="loopBtn()">Loop</button>
		Start: <input id="startSection" type="text" name="startTime" value="00:00"
				pattern="[0-9]{2}:[0-9]{2}" title="Time format must be 00:00">
		End: <input id="endSection" type="text" name="endTime" value="00:00"
				pattern="[0-9]{2}:[0-9]{2}" title="Time format must be 00:00">
	</div>

	<script src="../js/index.js" type="text/javascript"></script>
	
<% include ./partials/footer %>